<% if notice %>
  <div class='gap-3 z-40 fixed top-20 left-4 right-4'>
    <div
      data-controller="notification"
      data-notification-delay-value="3000"
      class="transition transform duration-500 hidden"
      data-transition-enter-from="opacity-0 -translate-y-12"
      data-transition-enter-to="opacity-100 translate-y-0"
      data-transition-leave-from="opacity-100 translate-y-0"
      data-transition-leave-to="opacity-0 -translate-y-12"
    >
      <div class='px-4 py-2.5 bg-green-100 border border-green-200 text-green-500 rounded-xl flex justify-between items-start'>
        <div><%= notice%></div>
        <button data-action="notification#hide">
          <%= icon 'fa-solid', 'xmark' %>
        </button>
      </div>
    </div>
  </div>
<% end %>