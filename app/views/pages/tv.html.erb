<%= turbo_stream_from :tv_orders %>
<div class="bg-[url('/bg-paper-lg.jpg')] bg-cover bg-no-repeat text-zinc-50">
  <div class='grid grid-cols-2 grid-rows-[auto_1fr] h-screen p-6 gap-4'>
    <div class='text-6xl h-32'>
      Pripravujeme
    </div>
    <div class='text-6xl h-32'>
      Hotovo!
    </div>
    <div id='orders-received' class='-mt-10'>
      <% @orders.select(&:received?).each do |order| %>
        <%= render 'pages/tv/order_number', id: order.id, state: order.state %>
      <% end %>
    </div>
    <div id='orders-prepared' class='-mt-10'>
      <% @orders.select(&:prepared?).each do |order| %>
        <%= render 'pages/tv/order_number', id: order.id, state: order.state %>
      <% end %>
    </div>
  </div>
</div>