<%= form_with url: update_customer_balance_path(@customer.id), class: 'space-y-4' do |f| %>
  <%= f.hidden_field :tokens, value: @tokens %>
  <div>
    <%= f.label :customer, 'Meno', class: 'block text-zinc-900 font-medium' %>
    <%= f.text_field :customer, disabled: true, value: @customer.name, class: 'rounded-lg mt-2 bg-zinc-200 border border-zinc-300 px-5 py-2.5 w-full focus:ring-0 focus:border-blue-300 focus:bg-zinc-50 transition duration-150' %>
  </div>

  <div>
    <%= f.label :eur, 'Suma v eurách', class: 'block text-zinc-900 font-medium' %>
    <%= f.number_field :eur, disabled: true, value: @eur, class: 'rounded-lg mt-2 bg-zinc-200 border border-zinc-300 px-5 py-2.5 w-full focus:ring-0 focus:border-blue-300 focus:bg-zinc-50 transition duration-150' %>
  </div>

  <div>
    <%= f.submit 'Sedí!', class: 'mt-6 w-full text-center py-4 rounded-xl bg-blue-500 cursor-pointer hover:bg-blue-400 text-zinc-50 font-semibold transition' %>
  </div>
<% end %>