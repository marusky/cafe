<% content_for :title, 'Nastavenia' %>
<% content_for :action do %>
  <%= button_to session_path, method: :delete, class: 'inline-block ml-4 text-xl transition text-rose-500 hover:text-rose-200' do %>
    <%= icon('fa-solid', 'right-from-bracket') %>
  <% end %>
<% end %>

<div class='text-lg'>
  <div class='pb-4 flex justify-between items-center'>
    <div class='font-semibold'>
      Prijímať nové objednávky?
    </div>
    <div id='accepting-orders-switch' data-controller='accepting-orders'>
      <%= render_switch '', id: 'available', name: 'available', checked: Current.admin.accepting_orders, action_on_toggle: 'accepting-orders#toggle' %>
    </div>
  </div>
</div>
